from math import * 

# declarando a função pagamento 

def pagamento():
       
# recebendo o preço do produto 

   print("Digite o preço do produto escolhido:")

   preco_produto = float(input())

# escolhendo a forma de pagamento 

   print("1 - À vista em dinheiro ou PIX, (recebe 15% de desconto)")
   print("2 - À vista no cartão de crédito, (recebe 10% de desconto)")
   print("3 - Em duas vezes, preço normal de etiqueta sem juros")
   print("4 - Em três vezes, preço normal de etiqueta mais juros de 10%")

   print("Escolha a sua forma de pagamento")

   forma_de_pagamento = int(input())

   # calculando o valor a ser pago 

   if forma_de_pagamento == 1:
        preco_final =  preco_produto * 0.85 # recebe 15% de desconto
   elif forma_de_pagamento == 2:
        preco_final = preco_produto * 0.90 # recebe 10% de desconto 
   elif forma_de_pagamento == 3:
        preco_final = preco_produto / 2  # parcelado de 2 vezes sem juros 
   elif forma_de_pagamento == 4:
        preco_final = preco_produto * 1.1 / 3 # parcelado de 3 vezes com juros de 10%
   else:
       print("Ops! Algo deu errado. Tente novamente, por favor.")
       return

 # exibindo o valor a ser pago 

   print("O valor a ser pago é: $", preco_final)

# chamando a função pagamento 

pagamento()

  


 
